extends layout
block content
	//- ul(class='list-group')
	table(class="full-screen-table")
		each item in items
			tr(class="full-screen-table-row")
				td(class="thumb-item")
					img(src=item.playlist.images[0].url class="thumb")
				td(class='title-item')
					div(id="title-div")
						p(class="two-line-title"): a(href='/songs?userid='+ item.playlist_owner.id +'&id='+item.playlist.id)=item.playlist.name
						//-TODO zamienić na link z nazwą autora
						p(class="subtitle"): a(href='/')=item.playlist_owner.display_name
				script(type="text/javascript").
					var name="#{item.playlist_owner.display_name}"
					console.log(name)